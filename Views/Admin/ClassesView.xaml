<UserControl x:Class="StageTracker.Views.Admin.ClassesView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StageTracker.Views.Admin" xmlns:i="http://schemas.microsoft.com/xaml/behaviors" xmlns:behaviors="clr-namespace:StageTracker.Behaviors"
             mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="White">
        <Label Content="Enseignants" HorizontalAlignment="Left" Margin="60,10,0,0" VerticalAlignment="Top" FontSize="24"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="60,67,0,0">
            <TextBox x:Name="TB_Search" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="160" MaxHeight="25" Height="25" MinHeight="25" MinWidth="160" VerticalContentAlignment="Center" FontSize="18" Foreground="#FF424242">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="TextChanged">
                        <i:InvokeCommandAction Command="{Binding TextChangedCommand}" CommandParameter="{Binding Text, RelativeSource={RelativeSource AncestorType=TextBox}}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </TextBox>
            <Label Cursor="Hand">
                Ajouter +
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseDown">
                        <i:InvokeCommandAction Command="{Binding AddClasseCommand}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Label>
        </StackPanel>


        <DataGrid x:Name="DataGrid" IsReadOnly="True" d:ItemsSource="{d:SampleData ItemCount=5}" ItemsSource="{Binding FilteredClasses}" CanUserSortColumns="True" CanUserReorderColumns="False" ScrollViewer.CanContentScroll="False" AutoGenerateColumns="False" Margin="75,106,75,0" MaxHeight="225" MaxWidth="560" GridLinesVisibility="Horizontal" VerticalAlignment="Top" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Classe" Binding="{Binding Name}" Width="*" MinWidth="105" MaxWidth="200"/>
                <DataGridTextColumn Header="Enseignant" Binding="{Binding Teacher.FullName}" Width="*" MinWidth="105" MaxWidth="200"/>
                <DataGridTemplateColumn Width="160">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Modifier" Command="{Binding DataContext.ModifyClasseCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" Height="25" Margin="5,0,0,0"/>
                                <Button Content="Supprimer" Command="{Binding DataContext.DeleteClasseCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" Height="25" Margin="5,0,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>

            <DataGrid.Resources>
                <Style TargetType="ScrollBar" BasedOn="{StaticResource VerticalScrollBar}"/>
            </DataGrid.Resources>
            <i:Interaction.Behaviors>
                <behaviors:DataGridUnselectAllOnSelectionChangedBehavior/>
            </i:Interaction.Behaviors>
        </DataGrid>
    </Grid>
</UserControl>
